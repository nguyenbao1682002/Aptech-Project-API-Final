@model ObjectBussiness.NewsCategory

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<style>
    label {
        color: black;
    }
</style>
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("Create", "NewsCategory", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-block alert-danger fade in" })
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <br />
                <div class="form-group">
                    @Html.LabelFor(n => n.CategoryName)
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Pleate enter Name" } })
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Creat" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
    <br />

    <div>
        @Html.ActionLink("Back To List", "Index", "NewsCategory", null, new { @class = "btn btn-danger" })
    </div>
</div>